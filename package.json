{
  "name": "static-site-generator",
  "version": "1.0.0",
  "description": "Static Site Generator",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run trans",
    "check-types": "tsc",
    "ci": "npm run lint",
    "lintfix": "npm run check-types && eslint ./src --fix --quiet && echo '✔ All good!'",
    "lint": "npm run check-types && eslint ./src --quiet && echo '✔ All good!'",
    "postinstall": "npm run trans",
    "trans": "node_modules/.bin/babel src/ -d lib/ --extensions '.ts'"
  },
  "keywords": [
    "SSG"
  ],
  "author": "warren@majestic-mint.co.uk",
  "license": "ISC",
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint && npm run trans"
    }
  },
  "dependencies": {
    "@babel/polyfill": "^7.11.5",
    "deepmerge": "^4.2.2",
    "install": "^0.13.0",
    "metalsmith": "^2.3.0",
    "metalsmith-assets-improved": "^1.0.1",
    "metalsmith-markdown": "^1.3.0",
    "metalsmith-react-tpl": "^3.0.2",
    "mkdirp": "^1.0.4",
    "npm": "^6.14.8",
    "prismic.io": "^3.6.1",
    "rimraf": "^3.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.11.6",
    "@babel/core": "^7.11.6",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@types/metalsmith": "^2.3.0",
    "@types/mkdirp": "^1.0.1",
    "@types/node": "^14.11.5",
    "@types/rimraf": "^3.0.0",
    "@types/webpack": "^4.41.22",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "debug": "^4.2.0",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "typescript": "^4.0.3",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12"
  }
}
